{
    "name": "ergosarapu/wp-htmlblocks",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0",
        "htmlburger/carbon-fields": "^3.2",
        "symfony/yaml": "^5.2",
        "oscarotero/env": "^2.1",
        "adbario/php-dot-notation": "^2.2",
        "mnsami/composer-custom-directory-installer": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "10up/wp_mock": "^0.4.2",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.9",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "HTMLBlocks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HTMLBlocks\\Tests\\": "tests"
        }
    },
    "scripts": {
        "build": [
            "@test",
            "@phpcs",
            "@phpmd"
        ],
        "test": "./vendor/bin/phpunit",
        "format": "./vendor/bin/php-cs-fixer fix",
        "phpcs": "./vendor/bin/phpcs --report=full --extensions=php -p --standard=phpcs.xml ./src ./tests",
        "phpmd": "./vendor/bin/phpmd ./src,./tests text cleancode,codesize,controversial,design,naming,unusedcode"
    }
}
